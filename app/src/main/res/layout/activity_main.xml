<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F056"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sarlavha"
        android:padding="16dp"
        android:textSize="48sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eskishahar_food"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:text="@string/lavash"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        />
    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:text="@string/shaurma"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        />
    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:text="@string/coca_cola"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/buyurtma"
        android:typeface="serif"
        android:textColor="#F056"
        />



</LinearLayout>